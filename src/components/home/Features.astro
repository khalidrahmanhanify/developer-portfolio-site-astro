---
// components imports
import { getCollection } from "astro:content";
import Heading from "@/ui/Heading.astro";

const features = await getCollection("features")

---
<section aria-label="Features Section" class="features">
    <div>
        <Heading tagName="h3" tagSize="h3">
            I build fast, sleek, modern websites.
        </Heading>
        <ul role="list">
            {
               features.map(({data}) => (
                <li>
                    <Fragment set:html={data.icon}/>
                    <Heading tagName="h3" tagSize="h4">{data.title}</Heading>
                    <p>{data.description}</p>
                </li>
               ))
            }
        </ul>
    </div>
</section>